<h1>Listing categories</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th class="centre">Name</th>
    <th colspan="3"></th>
  </tr>

  <% @categories.each do |category| %>
    <tr>
      <td class="centre"><%= category.name %></td>
      <td class="centre"><%= link_to 'Show', category %></td>
      <td class="centre"><%= link_to 'Edit', edit_category_path(category) %></td>
      <td class="centre"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Category', new_category_path, class:"btn btn-link", data: { no_turbolink: true }  %>
<% end %>
