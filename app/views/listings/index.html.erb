  <h1>Unique art from<br>
      around the world</h1>
  <h2>Handcrafted items</h2>
</div>
<div class="centre">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price, :unit => "Â£") %></p>
            <p><%= "Listed by #{listing.user.name}" %></p>
            <% # if (user_signed_in?) && (current_user == listing.user) %>
            <% # if current_user == listing.user %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class:"btn btn-link", data: { no_turbolink: true }  %>
<% end %>
