<div class="jumbotron">
  <%= t('jumbotron_title_html') %>
  <%= t('jumbotron_subtitle_html') %>
</div>
<div class="centre">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= t('listed_by', user: listing.user.name) %></p>
            <% # if (user_signed_in?) && (current_user == listing.user) %>
            <% # if current_user == listing.user %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>
<%= will_paginate @listings, :previous_label => ' < ', :next_label => ' > ', renderer: BootstrapPagination::Rails %>
<br>

<% if user_signed_in? %>
  <%#= link_to new_listing_path, class:"btn btn-primary", data: { no_turbolink: true } do %>
    <!-- <i class="glyphicon glyphicon-plus"></i> New Listing -->
  <%# end %>
  <%= link_to t('new_listing'), new_listing_path, class:"btn btn-link", data: { no_turbolink: true }  %>
<% end %>
